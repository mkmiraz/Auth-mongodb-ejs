<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <div class="user info">
        <% if (user.photo) { %>
        <img src="./images/profile/<%= user.photo %>" alt="" />
        <% }else{ %>

        <img src="./images/avatar.png" alt="" />
        <% } %>
        <h3><%= user.name %></h3>
      </div>
      <hr />
      <%- include('layouts/menu.ejs') %>
    </div>
    <div class="profile-box">
      <div class="box-content">
        <h2>Change Photo</h2>
        <hr />
        <div class="form-wraper">
          <form
            action="/update-profile"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="">Select a Photo</label>
              <div class="profile-photo">
                <% if (user.photo) { %>
                <img
                  class="imgPvu"
                  src="./images/profile/<%= user.photo %>"
                  alt=""
                />
                <% }else{ %>

                <img src="./images/avatar.png" alt="" />
                <% } %>
              </div>
              <label class="upload">
                <i class="fa fa-photo uplaod"></i>
                <input
                  name="profile_image"
                  class="PChangeIcon"
                  style="display: none"
                  type="file"
                />
              </label>
            </div>
            <div class="form-group">
              <button type="submit">Change</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
